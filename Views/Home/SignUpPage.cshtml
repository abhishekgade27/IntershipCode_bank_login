@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f1f1f1;
        }

        .container {
            margin-top: 50px;
        }

        .form-box {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
            padding: 20px;
        }

            .form-box h2 {
                margin-top: 0px;
                margin-bottom: 20px;
                text-align: center;
            }

            .form-box .form-group label {
                font-weight: bold;
            }

            .form-box .form-group input {
                border-radius: 5px;
                padding: 10px;
                border: none;
                box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.5);
                width: 100%;
                margin-bottom: 20px;
            }

                .form-box .form-group input:focus {
                    outline: none;
                    box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.5) inset;
                }

            .form-box .form-group button[type="submit"] {
                background-color: #007bff;
                border: none;
                color: #ffffff;
                font-weight: bold;
                padding: 10px;
                border-radius: 5px;
                width: 100%;
            }
        .

                .form-box .form-group button[type="submit"]:hover {
                    background-color: #0056b3;
                    cursor: pointer;
                }
        body {
            background-image: url('@Url.Content("~/Content/Ragister.jpg")');
            max-width:100%;
            background-size: cover;
            transform: scale(0.8);

        }
    </style>
    <title>Registration Form</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="form-box">
                    <h2>Registration Form</h2>
                    <form action="@Url.Action("Register", "Account")" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="name">Maneger Name:</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email address:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="form-group">
                            <label for="name">PAN-Card</label>
                            <input type="text" class="form-control" id="pancard" name="pancard" required>
                        </div>

                        <div class="form-group">
                            <label for="name">Adhar-card Number:</label>
                            <input type="Number" class="form-control" id="Adhar-card" name="Adhar-card" required>
                        </div>
                        <div class="form-group">
                            <label for="name">Bithdate:</label>
                            <input type="date" class="form-control" id="Bithdate" name="Bithdate" required>
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Conform Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-4">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>

</body>
</html>